{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./index.ts",
    "./schema": "./schema/index.ts",
    "./schema/*": "./schema/*"
  },
  "scripts": {
    "generate": "bun --bun drizzle-kit generate",
    "generate:remote": "DB=remote bun --bun drizzle-kit generate",
    "migrate": "bun --bun drizzle-kit migrate",
    "migrate:remote": "DB=remote bun --bun drizzle-kit migrate",
    "push": "bun --bun drizzle-kit push",
    "push:remote": "DB=remote bun --bun drizzle-kit push",
    "studio": "bun --bun drizzle-kit studio",
    "studio:remote": "DB=remote bun --bun drizzle-kit studio",
    "seed": "bun scripts/seed.ts",
    "introspect": "bun --bun drizzle-kit introspect",
    "check": "bun --bun drizzle-kit check",
    "drop": "bun --bun drizzle-kit drop",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.45.1"
  },
  "devDependencies": {
    "@libsql/client": "^0.17.0",
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.4",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "typescript": "~5.9.3"
  }
}
